# Base (PROD)
APP_ENV=prod
APP_SLUG=cal
APP_NO=2
APP_HOST=cal.mon-site.ca
APP_NAME=Calendrier
APP_DEPOT=Calendrier

# Ports PROD (dérivés d'APP_NO) — utiles pour un accès local à la DB uniquement
PROD_DB_PORT=5434

# Postgres (service docker interne)
POSTGRES_DB=${APP_SLUG}_pg_db
POSTGRES_USER=${APP_SLUG}_pg_user
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Backend
DJANGO_DEBUG=0
ALLOWED_HOSTS=${APP_HOST},backend,localhost,127.0.0.1
FRONT_ORIGIN=https://${APP_HOST}
SECURE_SSL_REDIRECT=1

# Frontend (invariant : chemin relatif)
VITE_API_BASE=/api
VITE_ADMIN_URL=https://${APP_HOST}/admin/

# Tokens
ACCESS_TOKEN_LIFETIME_MIN=30
REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS/CSRF
CORS_ALLOWED_ORIGINS=${FRONT_ORIGIN}
CSRF_TRUSTED_ORIGINS=${FRONT_ORIGIN}

# Secrets dans .env.prod.local
# POSTGRES_PASSWORD=***
# DJANGO_SECRET_KEY=*** 
# ADMIN_USERNAME=***
# ADMIN_PASSWORD=***
# ADMIN_EMAIL=***
