# Base (standard DEV)
APP_ENV=dev
APP_SLUG=cal
APP_NO=2
APP_HOST=localhost
APP_NAME=Calendrier
APP_DEPOT=Calendrier

# Ports DEV dérivés (rappel mémo 2025-09-10)
DEV_DB_PORT=5434
DEV_API_PORT=8003
DEV_VITE_PORT=5175

# Postgres
POSTGRES_DB=${APP_SLUG}_pg_db
POSTGRES_USER=${APP_SLUG}_pg_user
